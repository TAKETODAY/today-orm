<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence https://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">

	<persistence-unit name="Drivers" transaction-type="RESOURCE_LOCAL">
		<class>infra.orm.jpa.domain.Person</class>
		<class>infra.orm.jpa.domain.DriversLicense</class>
		<exclude-unlisted-classes />
	</persistence-unit>

	<persistence-unit name="Test" transaction-type="RESOURCE_LOCAL">
		<class>infra.beans.testfixture.TestBean</class>
		<exclude-unlisted-classes />
	</persistence-unit>

</persistence>
